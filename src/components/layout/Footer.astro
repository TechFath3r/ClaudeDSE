---
import { Image } from 'astro:assets';
import logo from '../../assets/images/DSLogo.png';

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'Services & Pricing', href: '/services' },
  { label: 'Blog', href: '/blog' },
  { label: 'About Us', href: '/about' },
  { label: 'Contact', href: '/contact' },
  { label: 'Book a Repair', href: 'https://app.repairkeeper.co.uk/enquire/dannstarr-electronics' },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-(--color-bg-secondary) border-t border-(--color-bg-secondary)">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand column -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-4">
          <Image src={logo} alt="DannStarr Electronics" width={36} height={36} class="rounded" />
          <span class="font-(family-name:--font-heading) text-lg font-bold text-(--color-text-primary)">
            DannStarr<span class="text-(--color-brand)"> Electronics</span>
          </span>
        </a>
        <p class="text-sm text-(--color-text-secondary) mb-4">
          Your local tech experts in Pinchbeck, Spalding. Professional repairs, bespoke web design, and friendly service since 2012.
        </p>
        <div class="flex gap-3">
          <a
            href="https://www.facebook.com/dannstarrelectronics"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-lg text-(--color-text-secondary) hover:text-(--color-brand) hover:bg-(--color-bg-primary) transition-all"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
          <a
            href="https://www.youtube.com/@DannStarrElectronics"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-lg text-(--color-text-secondary) hover:text-(--color-brand) hover:bg-(--color-bg-primary) transition-all"
            aria-label="YouTube"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="font-(family-name:--font-heading) font-semibold text-(--color-text-primary) mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-(--color-text-secondary) hover:text-(--color-brand) transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact & Hours -->
      <div>
        <h3 class="font-(family-name:--font-heading) font-semibold text-(--color-text-primary) mb-4">Contact & Hours</h3>
        <div class="space-y-3 text-sm text-(--color-text-secondary)">
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 shrink-0 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:07907830976" class="hover:text-(--color-brand) transition-colors">07907 830976</a>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 shrink-0 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:dannstarrelectronics@gmail.com" class="hover:text-(--color-brand) transition-colors break-all">dannstarrelectronics@gmail.com</a>
          </div>
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 shrink-0 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>61 Rotten Row, Pinchbeck, PE11 3RQ</span>
          </div>
          <div class="pt-2 border-t border-(--color-bg-primary)/20">
            <p class="font-medium text-(--color-text-primary) mb-1">Opening Hours</p>
            <p>Mon-Fri: 10:00 - 18:00</p>
            <p>Saturday: 10:00 - 15:00</p>
            <p>Sunday: Closed</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-10 pt-6 border-t border-(--color-bg-primary)/10 text-center text-sm text-(--color-text-secondary)">
      <p>&copy; {currentYear} DannStarr Electronics. All rights reserved.</p>
    </div>
  </div>
</footer>
