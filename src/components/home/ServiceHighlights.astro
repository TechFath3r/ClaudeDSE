---
import Section from '../shared/Section.astro';
import Card from '../shared/Card.astro';

const services = [
  {
    title: 'Phone Repair',
    description: 'iPhone and Samsung screen replacements, battery swaps, charging ports, cameras, and more. Most repairs done same day.',
    icon: 'phone',
    href: '/services#phone-repairs',
  },
  {
    title: 'Tablet Repair',
    description: 'iPad and Android tablet screen repairs, battery replacements, and charging port fixes at competitive prices.',
    icon: 'tablet',
    href: '/services#tablet-repairs',
  },
  {
    title: 'Laptop & Mac',
    description: 'MacBook and laptop screen replacements, keyboard repairs, SSD/RAM upgrades, and full diagnostics.',
    icon: 'laptop',
    href: '/services#laptop-repairs',
  },
  {
    title: 'Web Design',
    description: 'Bespoke, modern websites built for your business. Fast, mobile-friendly, and SEO-optimised. Starting from just Â£250.',
    icon: 'code',
    href: '/services#web-design',
  },
];

const iconPaths: Record<string, string> = {
  phone: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z',
  tablet: 'M12 18h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  laptop: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
};
---

<Section bg="secondary">
  <div class="text-center mb-12 reveal">
    <h2 class="font-(family-name:--font-heading) text-3xl sm:text-4xl font-bold text-(--color-text-primary) mb-4">
      What We Do
    </h2>
    <p class="text-(--color-text-secondary) text-lg max-w-2xl mx-auto">
      From cracked screens to custom websites, we've got you covered with fast, friendly, professional service.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {services.map((service, i) => (
      <a href={service.href} class={`reveal reveal-delay-${i + 1}`}>
        <Card class="h-full text-center group">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-(--color-brand)/10 flex items-center justify-center group-hover:bg-(--color-brand)/20 transition-colors">
            <svg class="w-6 h-6 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[service.icon]} />
            </svg>
          </div>
          <h3 class="font-(family-name:--font-heading) font-semibold text-(--color-text-primary) mb-2">{service.title}</h3>
          <p class="text-sm text-(--color-text-secondary)">{service.description}</p>
        </Card>
      </a>
    ))}
  </div>
</Section>
