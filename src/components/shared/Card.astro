---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;
---

<div
  class:list={[
    'rounded-xl border border-(--color-bg-secondary) bg-(--color-bg-primary) p-6 shadow-sm',
    hover && 'card-hover',
    className,
  ]}
>
  <slot />
</div>
