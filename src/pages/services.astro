---
import PageLayout from '../layouts/PageLayout.astro';
import Section from '../components/shared/Section.astro';
import Button from '../components/shared/Button.astro';
import Card from '../components/shared/Card.astro';
import yaml from 'js-yaml';
import pricingRaw from '../data/pricing.yaml?raw';

const pricingData: any = yaml.load(pricingRaw);

const categories = pricingData.categories;
const webDesign = pricingData.webDesign;

const iconPaths: Record<string, string> = {
  phone: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z',
  tablet: 'M12 18h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  laptop: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  battery: 'M17 6h-2V5a1 1 0 00-1-1H10a1 1 0 00-1 1v1H7a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V8a2 2 0 00-2-2z',
  plug: 'M13 10V3L4 14h7v7l9-11h-7z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  camera: 'M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z M15 13a3 3 0 11-6 0 3 3 0 016 0z',
  droplet: 'M12 21c-4.97 0-9-3.582-9-8 0-4.418 9-13 9-13s9 8.582 9 13c0 4.418-4.03 8-9 8z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
};

const webFeatureIcons: Record<string, string> = {
  'Custom Design': 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  'Mobile Responsive': 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z',
  'SEO Optimised': 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  'Fast Loading': 'M13 10V3L4 14h7v7l9-11h-7z',
  'Ongoing Management': 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
  'Affordable Pricing': 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<PageLayout
  title="Services & Pricing"
  description="Transparent pricing for phone, tablet, and laptop repairs. iPhone screens, Samsung repairs, battery replacements, and more. Plus bespoke web design from £250."
>
  <!-- Hero -->
  <Section>
    <div class="text-center max-w-3xl mx-auto reveal">
      <h1 class="font-(family-name:--font-heading) text-4xl sm:text-5xl font-extrabold text-(--color-text-primary) mb-4">
        Services & <span class="text-(--color-brand)">Pricing</span>
      </h1>
      <p class="text-(--color-text-secondary) text-lg mb-6">
        Transparent pricing for all our most common repairs. No hidden fees, no surprises. Can't see your device? Just give us a call for a free quote.
      </p>
      <div class="flex items-center justify-center gap-6 text-sm text-(--color-text-secondary)">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          No fix, no fee
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Warranty included
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Same-day repairs
        </span>
      </div>
    </div>
  </Section>

  <!-- Pricing categories -->
  {categories.map((category: any, catIndex: number) => (
    <Section
      bg={catIndex % 2 === 0 ? 'secondary' : 'primary'}
      id={category.name.toLowerCase().includes('iphone') || category.name.toLowerCase().includes('samsung') ? 'phone-repairs'
        : category.name.toLowerCase().includes('ipad') ? 'tablet-repairs'
        : category.name.toLowerCase().includes('macbook') ? 'laptop-repairs'
        : undefined}
    >
      <div class="reveal">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 rounded-lg bg-(--color-brand)/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[category.icon] || iconPaths.code} />
            </svg>
          </div>
          <div>
            <h2 class="font-(family-name:--font-heading) text-2xl font-bold text-(--color-text-primary)">{category.name}</h2>
            <p class="text-sm text-(--color-text-secondary)">{category.description}</p>
          </div>
        </div>

        {/* Tier descriptions for tiered categories */}
        {category.tiered && category.tierDescriptions && (
          <div class="flex flex-wrap gap-4 mt-4 mb-6">
            <div class="flex items-center gap-2 text-sm">
              <span class="inline-block w-3 h-3 rounded-full bg-blue-500"></span>
              <span class="font-medium text-(--color-text-primary)">{category.tierLabels?.budget || 'Budget'}:</span>
              <span class="text-(--color-text-secondary)">{category.tierDescriptions.budget}</span>
            </div>
            <div class="flex items-center gap-2 text-sm">
              <span class="inline-block w-3 h-3 rounded-full bg-amber-500"></span>
              <span class="font-medium text-(--color-text-primary)">{category.tierLabels?.premium || 'Premium'}:</span>
              <span class="text-(--color-text-secondary)">{category.tierDescriptions.premium}</span>
            </div>
          </div>
        )}

        {/* Pricing table */}
        <div class="mt-6 overflow-x-auto rounded-xl border border-(--color-bg-secondary) bg-(--color-bg-primary)">
          <table class="w-full text-sm">
            <thead>
              <tr class="border-b border-(--color-bg-secondary)">
                <th class="text-left py-3 px-4 font-semibold text-(--color-text-primary)">Model</th>
                {category.tiered ? (
                  <>
                    <th class="text-right py-3 px-4 font-semibold text-blue-500">{category.tierLabels?.budget || 'Budget'}</th>
                    <th class="text-right py-3 px-4 font-semibold text-amber-500">{category.tierLabels?.premium || 'Premium'}</th>
                  </>
                ) : (
                  <th class="text-right py-3 px-4 font-semibold text-(--color-text-primary)">Price</th>
                )}
              </tr>
            </thead>
            <tbody>
              {category.items.map((item: any, i: number) => (
                <tr class:list={['border-b border-(--color-bg-secondary)/50 last:border-0', i % 2 === 1 && 'bg-(--color-bg-secondary)/30']}>
                  <td class="py-3 px-4 text-(--color-text-primary)">{item.model}</td>
                  {category.tiered ? (
                    <>
                      <td class="text-right py-3 px-4 font-medium text-(--color-text-primary)">£{item.budget?.toFixed(2)}</td>
                      <td class="text-right py-3 px-4 font-medium text-(--color-text-primary)">£{item.premium?.toFixed(2)}</td>
                    </>
                  ) : (
                    <td class="text-right py-3 px-4 font-medium text-(--color-text-primary)">£{item.price?.toFixed(2)}</td>
                  )}
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        {category.note && (
          <p class="mt-3 text-sm text-(--color-text-secondary) italic">
            * {category.note}
          </p>
        )}
      </div>
    </Section>
  ))}

  <!-- Web Design Section -->
  <Section bg="secondary" id="web-design">
    <div class="reveal">
      <div class="text-center mb-12">
        <h2 class="font-(family-name:--font-heading) text-3xl sm:text-4xl font-bold text-(--color-text-primary) mb-4">
          {webDesign.title}
        </h2>
        <p class="text-(--color-text-secondary) text-lg max-w-2xl mx-auto mb-2">
          {webDesign.description}
        </p>
        <p class="text-2xl font-bold text-(--color-brand)">
          Starting from just £{webDesign.startingPrice}
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {webDesign.features.map((feature: any, i: number) => (
          <Card class={`reveal reveal-delay-${(i % 4) + 1}`}>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-lg bg-(--color-brand)/10 flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-(--color-brand)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={webFeatureIcons[feature.title] || webFeatureIcons['Custom Design']} />
                </svg>
              </div>
              <div>
                <h3 class="font-(family-name:--font-heading) font-semibold text-(--color-text-primary) mb-1">{feature.title}</h3>
                <p class="text-sm text-(--color-text-secondary)">{feature.description}</p>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <div class="text-center mt-10">
        <Button href="/contact" variant="primary" size="lg">
          Get a Free Quote
        </Button>
      </div>
    </div>
  </Section>

  <!-- Bottom CTA -->
  <section class="bg-(--color-brand) py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-(family-name:--font-heading) text-3xl font-bold text-white mb-4">
        Can't Find Your Device?
      </h2>
      <p class="text-white/90 text-lg max-w-2xl mx-auto mb-8">
        These are just our most common repairs. We fix all sorts! Get in touch for a free, no-obligation quote.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <Button
          href="https://app.repairkeeper.co.uk/enquire/dannstarr-electronics"
          size="lg"
          external
          class="bg-white text-(--color-brand) hover:bg-gray-100"
        >
          Book a Repair
        </Button>
        <Button href="tel:07907830976" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
          Call Us
        </Button>
      </div>
    </div>
  </section>
</PageLayout>
